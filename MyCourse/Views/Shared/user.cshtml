@inject Microsoft.AspNetCore.Identity.SignInManager<MyCourse.Models.ApplicationUser> SignInManager

@if(SignInManager.IsSignedIn(User)) {
	<div class="mt-3 text-center">
		<p> გამარჯობა @User.Identity.Name </p> 
	</div>
	<div class="text-center">
		<a class="btn btn-primary" href="/Account/Logout"> გამოსვლა </a>	 
	</div>

	
} else
{
	<ul class="nav navbar-nav login-register-ul">
		<li> <a class="nav-link" id="registerlink" asp-action="Register" asp-controller="Account" style="color:black;"> რეგისტრაცია </a> </li>
		<li> <a class="nav-link" id="loginlink" asp-action="Login" asp-controller="Account" style="color:black;"> შესვლა </a> </li>
	</ul>
}


